<ul class="product-list-ul clearfix">
{{#if all}}
	{{#each products key="id" as |product|}}
	    {{product.list-component product=product all=all}}
	{{/each}}
{{else}}
	{{#slick-slider slidesPerRow=6 slidesToShow=6 infinite=false responsive=breakpoints}}
	  {{#each products key="id" as |product|}}
	    {{product.list-component product=product}}
	  {{/each}}
	{{/slick-slider}}
{{/if}}
</ul>
{{yield}}
